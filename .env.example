# ===========================================
# ShopDeploy Docker Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/shopdeploy
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/shopdeploy

# JWT Configuration
JWT_ACCESS_SECRET=your_super_secure_access_secret_key_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API URL (for frontend to connect to backend)
VITE_API_URL=http://localhost:5000/api

# Stripe Payment (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key


